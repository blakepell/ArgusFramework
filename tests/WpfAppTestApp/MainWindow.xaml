<Window x:Class="WpfAppTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTestApp"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="TextLeft" Text="" AcceptsReturn="True" Grid.Row="0" Grid.Column="0" FontFamily="Consolas" FontSize="14" />

        <TextBox x:Name="TextRight" Text="" AcceptsReturn="True" Grid.Row="0" Grid.Column="1" FontFamily="Consolas" FontSize="14" />

        <DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" LastChildFill="True">
            <Button x:Name="ButtonExecute" Content="Execute" Click="ButtonExecute_Click" DockPanel.Dock="Right">

            </Button>
        </DockPanel>
    </Grid>

</Window>
